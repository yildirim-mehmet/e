@model EgitimKayit.ViewModels.EgitimSablonIndexViewModel

@{
    ViewData["Title"] = "Eğitim Şablonları";
    var currentUserTip = Context.Session.GetString("PersonelTip");
    var isYetkili = currentUserTip == "talepci" || currentUserTip == "ogretmen" || 
                   currentUserTip == "sorumlu" || currentUserTip == "yonetici";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Eğitim Şablonları</h2>
        @if (isYetkili)
        {
            <a href="@Url.Action("Create", "EgitimSablon")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Şablon
            </a>
        }
    </div>

    <!-- Mesajlar -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtre -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Filtrele</h5>
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Dershane</label>
                    <select name="dershaneId" class="form-select" id="dershaneFilter">
                        <option value="">Tüm Dershaneler</option>
                        @foreach (var dershane in Model.Dershaneler)
                        {
                            <option value="@dershane.Id" selected="@(Model.SeciliDershaneId == dershane.Id)">
                                @dershane.Ad
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Eğitim Tipi</label>
                    <select name="egitimTipId" class="form-select" id="egitimTipFilter">
                        <option value="">Tüm Eğitim Tipleri</option>
                        @foreach (var egitimTip in Model.EgitimTipleri)
                        {
                            var dershaneAd = egitimTip.Dershane?.Ad ?? "";
                            <option value="@egitimTip.Id" selected="@(Model.SeciliEgitimTipId == egitimTip.Id)">
                                @egitimTip.Ad - @dershaneAd
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Filtrele</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Temizle</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Eğitim Şablonları Listesi -->
    <div class="card">
        <div class="card-body">
            @if (!Model.EgitimSablonlari.Any())
            {
                <div class="text-center py-4">
                    <p class="text-muted">Henüz eğitim şablonu bulunmamaktadır.</p>
                    @if (isYetkili)
                    {
                        <a href="@Url.Action("Create", "EgitimSablon")" class="btn btn-primary">İlk Şablonu Oluştur</a>
                    }
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Şablon Adı</th>
                                <th>Dershane</th>
                                <th>Eğitim Tipi</th>
                                <th>Açıklama</th>
                                <th>Eğitim Programı Sayısı</th>
                                <th>Oluşturan</th>
                                <th>Oluşturma Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sablon in Model.EgitimSablonlari)
                            {
                                <tr>
                                    <td>
                                        <strong>@sablon.Ad</strong>
                                    </td>
                                    <td>@sablon.Dershane?.Ad</td>
                                    <td>@sablon.EgitimTip?.Ad</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(sablon.Aciklama))
                                        {
                                            <span title="@sablon.Aciklama">
                                                @(sablon.Aciklama.Length > 50 ? sablon.Aciklama.Substring(0, 50) + "..." : sablon.Aciklama)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@sablon.EgitimProgramlari?.Count</span>
                                    </td>
                                    <td>@sablon.Yaratan?.Adlar</td>
                                    <td>@sablon.Tarih?.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", "EgitimSablon", new { id = sablon.Id })" 
                                               class="btn btn-outline-info" title="Detay">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (isYetkili && (sablon.YaratanTc == Context.Session.GetString("PersonelTc") || 
                                               currentUserTip == "sorumlu" || currentUserTip == "yonetici"))
                                            {
                                                <a href="@Url.Action("Edit", "EgitimSablon", new { id = sablon.Id })" 
                                                   class="btn btn-outline-primary" title="Düzenle">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <form asp-action="Delete" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@sablon.Id" />
                                                    <button type="submit" class="btn btn-outline-danger" 
                                                            title="Sil" onclick="return confirm('Bu şablonu silmek istediğinizden emin misiniz?')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Dershane filtresi değişince eğitim tipi filtresini güncelle
        $('#dershaneFilter').change(function() {
            const dershaneId = $(this).val();
            const egitimTipFilter = $('#egitimTipFilter');

            if (dershaneId) {
                // Seçili dershaneye ait eğitim tiplerini getir
                $.getJSON('@Url.Action("GetEgitimTipleriByDershane", "EgitimSablon")', { dershaneId: dershaneId })
                    .done(function(data) {
                        egitimTipFilter.empty();
                        egitimTipFilter.append('<option value="">Tüm Eğitim Tipleri</option>');

                        $.each(data, function(index, item) {
                            egitimTipFilter.append($('<option>', {
                                value: item.id,
                                text: item.ad
                            }));
                        });
                    })
                    .fail(function() {
                        console.error('Eğitim tipleri yüklenirken hata oluştu.');
                    });
            } else {
                // Tüm eğitim tiplerini yükle
                egitimTipFilter.empty();
                egitimTipFilter.append('<option value="">Tüm Eğitim Tipleri</option>');

                // Razor ile tüm eğitim tiplerini ekle - DÜZELTİLDİ
                @foreach (var egitimTip in Model.EgitimTipleri)
                {
                        var dershaneAd = egitimTip.Dershane?.Ad ?? "";
                        @:egitimTipFilter.append($('<option>', {
                        @:    value: '@egitimTip.Id',
                        @:    text: '@egitimTip.Ad - @dershaneAd'
                        @:}));
                }
            }
        });

        // Sayfa yüklendiğinde dershane filtresi varsa eğitim tiplerini güncelle
        $(document).ready(function() {
            const seciliDershaneId = $('#dershaneFilter').val();
            if (seciliDershaneId) {
                $('#dershaneFilter').trigger('change');
            }
        });
    </script>
}

