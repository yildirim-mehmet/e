@model EgitimKayit.ViewModels.EgitimTipViewModel

@{
    ViewData["Title"] = "Yeni Eğitim Tipi Oluştur";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Yeni Eğitim Tipi Oluştur</h2>
        <a href="@Url.Action("Index", "EgitimTip")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Listeye Dön
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Eğitim Tipi Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="DerId" class="form-label"></label>
                                    <select asp-for="DerId" class="form-select" required>
                                        <option value="">Dershane seçiniz...</option>
                                        @foreach (var dershane in Model.Dershaneler ?? new List<Dershane>())
                                        {
                                            <option value="@dershane.Id">@dershane.Ad</option>
                                        }
                                    </select>
                                    <span asp-validation-for="DerId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Ad" class="form-label"></label>
                                    <input asp-for="Ad" class="form-control" placeholder="Eğitim tipi adını girin" />
                                    <span asp-validation-for="Ad" class="text-danger"></span>
                                    <div class="form-text">Aynı dershanede benzersiz eğitim tipi adı olmalıdır.</div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> Eğitim Tipini Oluştur
                                </button>
                                <a href="@Url.Action("Index", "EgitimTip")" class="btn btn-secondary">İptal</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}