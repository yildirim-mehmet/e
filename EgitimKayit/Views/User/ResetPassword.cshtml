@model EgitimKayit.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifre Sıfırlama";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-4">
                <div class="card-header">
                    <h4 class="card-title mb-0">Şifre Sıfırlama</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        <strong>TC: @Model.Tc</strong> için şifre sıfırlama işlemi
                    </p>

                    <form asp-action="ResetPassword" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Tc" />

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" type="password" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <i class="bi bi-info-circle"></i>
                                Yeni şifre en az 6 karakter uzunluğunda olmalıdır.
                            </small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-key"></i> Şifreyi Sıfırla
                            </button>
                            <a href="@Url.Action("Details", "User", new { tc = Model.Tc })"
                               class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}