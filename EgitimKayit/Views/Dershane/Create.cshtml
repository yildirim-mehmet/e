@model EgitimKayit.ViewModels.DershaneViewModel

@{
    ViewData["Title"] = "Yeni Dershane Oluştur";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Yeni Dershane Oluştur</h2>
        <a href="@Url.Action("Index", "Dershane")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Listeye Dön
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Dershane Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Ad" class="form-label"></label>
                                    <input asp-for="Ad" class="form-control" placeholder="Dershane adını girin" />
                                    <span asp-validation-for="Ad" class="text-danger"></span>
                                    <div class="form-text">Dershane adı benzersiz olmalıdır.</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Aciklama" class="form-label"></label>
                                    <textarea asp-for="Aciklama" class="form-control" rows="4"
                                              placeholder="Dershane açıklamasını girin"></textarea>
                                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> Dershaneyi Oluştur
                                </button>
                                <a href="@Url.Action("Index", "Dershane")" class="btn btn-secondary">İptal</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}