@model EgitimKayit.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h4 class="card-title mb-0 text-center">Eğitim Kayıt Takip Sistemi</h4>
                </div>
                <div class="card-body">
                    <!-- Başarı mesajı (Logout sonrası) -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <!-- TC Kimlik No -->
                        <div class="mb-3">
                            <label asp-for="Tc" class="form-label">TC Kimlik No</label>
                            <input asp-for="Tc" class="form-control" placeholder="TC Kimlik Numaranızı girin" />
                            <span asp-validation-for="Tc" class="text-danger"></span>
                        </div>

                        <!-- Şifre -->
                        <div class="mb-3">
                            <label asp-for="Sifre" class="form-label">Şifre</label>
                            <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifrenizi girin" />
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>

                        <!-- Beni Hatırla -->
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                        </div>

                        <!-- Giriş Butonu -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>

                        <!-- Validation Summary -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mt-3">
                                @Html.ValidationSummary()
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}