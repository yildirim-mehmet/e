@model EgitimKayit.Models.EgitimProgram

@{
    ViewData["Title"] = "Eğitim Programı Detayları";
    var currentUserTip = Context.Session.GetString("PersonelTip");
    var currentUserTc = Context.Session.GetString("PersonelTc");
    var canEdit = currentUserTc == Model.YaratanTc || currentUserTip == "sorumlu" || currentUserTip == "yonetici";
    var canOnayla = currentUserTip == "ogretmen" || currentUserTip == "sorumlu" || currentUserTip == "yonetici";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Eğitim Programı Detayları</h4>
                    <div class="btn-group">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Listeye Dön
                        </a>
                        @if (canEdit)
                        {
                            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <!-- Mesajlar -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="text-primary">@Model.EgitimSablon?.Ad</h5>
                            <hr />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Dershane:</dt>
                                <dd class="col-sm-8">@Model.EgitimSablon?.Dershane?.Ad</dd>

                                <dt class="col-sm-4">Eğitim Tipi:</dt>
                                <dd class="col-sm-8">@Model.EgitimSablon?.EgitimTip?.Ad</dd>

                                <dt class="col-sm-4">Başlangıç:</dt>
                                <dd class="col-sm-8">@Model.BasTar?.ToString("dd.MM.yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Bitiş:</dt>
                                <dd class="col-sm-8">@Model.BitTar?.ToString("dd.MM.yyyy HH:mm")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Öğretmen:</dt>
                                <dd class="col-sm-8">@(Model.Ogretmen?.Adlar ?? "Atanmadı")</dd>

                                <dt class="col-sm-4">Onay Durumu:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Onayli == 1)
                                    {
                                        <span class="badge bg-success">Onaylı</span>
                                    }
                                    else if (Model.Onayli == 0)
                                    {
                                        <span class="badge bg-danger">Reddedildi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Beklemede</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Oluşturan:</dt>
                                <dd class="col-sm-8">@(Model.Yaratan?.Adlar ?? "Bilinmiyor")</dd>

                                <dt class="col-sm-4">Katılımcı Sayısı:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.Katilimcilar?.Count</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Aciklama))
                    {
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <dt>Açıklama:</dt>
                                <dd class="mt-2 p-3 bg-light rounded">@Model.Aciklama</dd>
                            </div>
                        </div>
                    }

                    <!-- Onay Butonları (Öğretmen ve üstü) -->
                    @if (canOnayla && Model.Onayli == null)
                    {
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <div class="btn-group">
                                    <form asp-action="Onayla" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <input type="hidden" name="onayDurumu" value="1" />
                                        <button type="submit" class="btn btn-success me-2">
                                            <i class="bi bi-check-circle"></i> Onayla
                                        </button>
                                    </form>
                                    <form asp-action="Onayla" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <input type="hidden" name="onayDurumu" value="0" />
                                        <button type="submit" class="btn btn-danger"
                                                onclick="return confirm('Bu programı reddetmek istediğinizden emin misiniz?')">
                                            <i class="bi bi-x-circle"></i> Reddet
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Silme Butonu (Sadece yetkililer) -->
                    @if (canEdit)
                    {
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-outline-danger"
                                            onclick="return confirm('Bu programı silmek istediğinizden emin misiniz?')">
                                        <i class="bi bi-trash"></i> Programı Sil
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>