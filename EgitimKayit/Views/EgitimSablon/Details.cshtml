@model EgitimKayit.Models.EgitimSablon

@{
    ViewData["Title"] = "Eğitim Şablonu Detayları";
    var currentUserTip = Context.Session.GetString("PersonelTip");
    var currentUserTc = Context.Session.GetString("PersonelTc");
    var canEdit = currentUserTc == Model.YaratanTc || currentUserTip == "sorumlu" || currentUserTip == "yonetici";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Eğitim Şablonu Detayları</h4>
                    <div class="btn-group">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Listeye Dön
                        </a>
                        @if (canEdit)
                        {
                            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <!-- Mesajlar -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="text-primary">@Model.Ad</h5>
                            <hr />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Dershane:</dt>
                                <dd class="col-sm-8">@Model.Dershane?.Ad</dd>

                                <dt class="col-sm-4">Eğitim Tipi:</dt>
                                <dd class="col-sm-8">@Model.EgitimTip?.Ad</dd>

                                <dt class="col-sm-4">Oluşturan:</dt>
                                <dd class="col-sm-8">@(Model.Yaratan?.Adlar ?? "Bilinmiyor")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Oluşturma Tarihi:</dt>
                                <dd class="col-sm-8">@Model.Tarih?.ToString("dd.MM.yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Eğitim Programı:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.EgitimProgramlari?.Count</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Aciklama))
                    {
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <dt>Açıklama:</dt>
                                <dd class="mt-2 p-3 bg-light rounded">@Model.Aciklama</dd>
                            </div>
                        </div>
                    }

                    <!-- Silme Butonu (Sadece yetkililer) -->
                    @if (canEdit)
                    {
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-outline-danger"
                                            onclick="return confirm('Bu şablonu silmek istediğinizden emin misiniz?')">
                                        <i class="bi bi-trash"></i> Şablonu Sil
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>